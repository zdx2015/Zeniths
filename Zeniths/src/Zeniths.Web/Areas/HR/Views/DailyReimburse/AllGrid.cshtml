@model PageList<DailyReimburse>
@{
    Layout = null;
}
<table class="table table-zeniths table-striped table-bordered table-hover" style="table-layout:fixed">
    <thead>
        <tr>
            <th style="width:34px;">
                <label><input class="checkbox-check" type="checkbox"><span></span></label>
            </th>
            <th data-order="@nameof(DailyReimburse.ReimburseDepartmentName)">所属部门/项目</th>
            <th data-order="@nameof(DailyReimburse.ApplicantName)">经办人</th>
            <th style="width:100px;" data-order="@nameof(DailyReimburse.ApplicationDate)">填报日期</th>
            <th data-order="@nameof(DailyReimburse.ProjectSumMoney)">报销金额</th>
            <th data-order="@nameof(DailyReimburse.ApplyOpinion)">申请情况说明</th>
            <th data-order="@nameof(DailyReimburse.StepName)">当前审批步骤</th>
            <th data-order="@nameof(DailyReimburse.StepStatus)">当前审批状态</th>
            <th data-order="@nameof(DailyReimburse.IsFinish)">审批流程状态</th>

            <th class="text-center" style="width:70px;">操作</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var record in Model)
        {
            <tr class="cursor-pointer" data-url="@Url.Action("Details",new {businessId = record.Id})">
                <td>
                    <label><input class="checkbox-check" type="checkbox" value="@record.Id"><span></span></label>
                </td>

                <td>@record.ReimburseDepartmentName</td>
                <td>@record.ApplicantName</td>
                <td>@DateTimeHelper.FormatDate(record.ApplicationDate)</td>
                <td>@record.ProjectSumMoney</td>
                <td>@record.ApplyOpinion</td>
                <td>@record.StepName</td>
                @if (record.StepStatus.HasValue)
                {
                    if (record.StepStatus.Value)
                    {
                        <td>通过</td>
                    }
                    else
                    {
                        <td>不通过</td>
                    }
                }
                else
                {
                    <td></td>

                }
                @if (record.IsFinish)
                {
                    <td>完成</td>
                }
                else
                {
                    <td>未完成</td>
                }

                <td>
                    <a class="btn btn-default btn-xs purple-stripe btnRecordView" data-url="@Url.Action("Details",new {businessId = record.Id})">
                        <i class="fa fa-eye"></i> 查看
                    </a>
                    @*<a class="btn btn-default btn-xs green-stripe btnRecordEdit" data-url="@Url.Action("Edit",new {id = record.Id})">
                            <i class="fa fa-edit"></i> 编辑
                        </a>*@

                </td>
            </tr>
        }
    </tbody>
</table>

@Html.RenderPages(Model)