@model DailyReimburse
@{
    var title = "查看日常费用报销";
}

<div class="container-edit-zeniths" style="overflow-x: hidden; overflow-y: auto;">
    <form class="editform" action="@Url.Action("Save")" method="POST" role="form">
        <div class="panel panel-default panel-zeniths" style="height: 685px;overflow-x: hidden; overflow-y: auto;">
            <div class="panel-heading">
                <span class="prefix"> <strong>@Model.Id</strong></span>
                @title
            </div>
            <div class="panel-body" style="height: 580px;overflow-x: hidden; overflow-y: auto;">

                <!--tab 代码 开始 -->
                <div class="tabbable-line">
                    <ul class="nav nav-tabs ">
                        <li class="active">
                            <a href="#DealBase" data-toggle="tab">
                                基本信息
                            </a>
                        </li>
                        <li>
                            <a href="#DealOpinion" data-toggle="tab">
                                处理意见
                            </a>
                        </li>
                        <li>
                            <a href="#DealFlow" data-toggle="tab">
                                流程图
                            </a>
                        </li>

                    </ul>
                    <div class="tab-content">
                        <div class="tab-pane active" id="DealBase" style="overflow-x: hidden; overflow-y: auto;">
                            <table class="table table-form table-dialog-form">
                                <tr>
                                    <th class="w-130px">
                                        <label class="control-label">报销部门：</label>
                                    </th>
                                    <td>
                                        <p class="form-control-static">@Model.ReimburseDepartmentName</p>
                                    </td>

                                    <th>
                                        <label class="control-label">经办人：</label>
                                    </th>
                                    <td>
                                        <p class="form-control-static">@Model.ApplicantName</p>
                                    </td>
                                </tr>
                                <tr>
                                    <th>
                                        <label class="control-label">申请情况说明：</label>
                                    </th>
                                    <td colspan="3">
                                        <p class="form-control-static">@Model.ApplyOpinion</p>
                                    </td>
                                </tr>
                            </table>
                            <fieldset>
                                <legend>费用明细</legend>
                                @Html.Action("DetailGrid", new { dailyId = Model.Id })
                            </fieldset>
                            <fieldset>
                                <legend>附件</legend>
                                @Html.Action("Files", "System", new { area = "Auth", resName = nameof(DailyReimburse), resId = Model.Id, allowDelete = false })
                            </fieldset>
                        </div>

                        <div class="tab-pane" id="DealOpinion" style="overflow-x: hidden; overflow-y: auto;">
                            @Html.Action("InstanceTasks", "FlowTask", new { area = "WorkFlow", flowInstanceId = Model.FlowInstanceId })
                        </div>
                        <div class="tab-pane" id="DealFlow" style="overflow-x: hidden; overflow-y: auto;">
                            @Html.Action("TaskImage", "FlowTask", new { area = "WorkFlow", flowInstanceId = Model.FlowInstanceId })
                        </div>

                    </div>
                </div>
                <!-- tab 代码 结束 -->


            </div>
            <div class="panel-footer text-center">
                <div class="buttons">
                    <a class="btn btn-default btnClose" onclick="zeniths.util.closeFrameDialog(window);">
                        <i class="fa fa-sign-in"></i> 关闭
                    </a>
                </div>
            </div>
        </div>
    </form>
</div>
@section script{
    <script>
        $(function() {
            $('#filedatagrid').datagrid();
        });
    </script>
}