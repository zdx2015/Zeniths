@model PageList<EmployeeLeave>
@{
    Layout = null;
}
<table class="table table-zeniths table-striped table-bordered table-hover">
    @Html.Action("_GridColumnCommon")
    <tbody>
        @foreach (var record in Model)
        {
            <tr class="cursor-pointer" data-url="@Url.Action("Details", new { businessId = record.Id })">
                <td>
                    <label><input class="checkbox-check" type="checkbox" value="@record.Id"><span></span></label>
                </td>
                <td>@record.EmployeeName</td>
                <td>@record.Deparment</td>
                <td>@record.Post</td>
                <td>@record.LeaveCategory</td>
                <td class="text-center">@DateTimeHelper.FormatDateHasSecond(record.StartDatetime)</td>
                <td class="text-center">@DateTimeHelper.FormatDateHasSecond(record.EndDatetime)</td>
                <td>@record.Days</td>
                <td>@record.Reason</td>
                <td>@record.StepName</td>
                <td>@record.StatusName()</td>
                <td>@record.ApplyDateTime</td>
                <td>
                    <a class="btn btn-default btn-xs purple-stripe btnRecordView" data-url="@Url.Action("Details", new { businessId = record.Id })">
                        <i class="fa fa-eye"></i> 查看
                    </a>                   
                </td>
            </tr>
         }
    </tbody>
</table>

@Html.RenderPages(Model)