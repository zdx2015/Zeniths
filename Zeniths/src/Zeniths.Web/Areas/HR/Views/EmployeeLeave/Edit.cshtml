@model EmployeeLeave
@{
    var title = Html.GetCurrentStepName();
    Layout = "~/Views/Shared/_LayoutWorkflow.cshtml";
}

<div class="container-edit-zeniths">
    <form class="editform" action="@Html.GetFlowExecuteUrl()" method="POST" role="form">
        <div class="panel panel-default panel-zeniths">
            <div class="panel-heading">
                <span class="prefix"> <strong>@Model.Id</strong></span>
                @title
            </div>
            <div class="panel-body">
                @Html.AntiForgeryToken()
                <input type="hidden" name="@nameof(Model.Id)" value="@Model.Id" />
                <input type="hidden" name="@nameof(Model.EmployeeId)" value="@Model.EmployeeId" />
                <input type="hidden" name="@nameof(Model.DeparmentId)" value="@Model.DeparmentId" />
                <table class="table table-form table-dialog-form">
                    <tr>
                        <th class="w-120px">
                            <label class="required" aria-required="true"></label><label class="control-label">姓名：</label>
                        </th>
                        <td colspan="3">
                            <div class="input-icon right">
                                <input class="form-control" name="@nameof(Model.EmployeeName)" value="@Model.EmployeeName" type="text" readonly />
                            </div>
                        </td>
                    </tr>
                    <tr>
                        <th>
                            <label class="required" aria-required="true"></label> <label class="control-label">部门：</label>
                        </th>
                        <td>
                            <div class="input-icon right">
                                <input class="form-control" name="@nameof(Model.Deparment)" value="@Model.Deparment" type="text" readonly />
                            </div>
                        </td>
                        <th>
                            <label class="control-label">岗位：</label>
                        </th>
                        <td>
                            <div class="input-icon right">
                                <input class="form-control" name="@nameof(Model.Post)" value="@Model.Post" type="text" readonly />
                            </div>
                        </td>
                    </tr>
                    <tr>
                        <th>
                            <label class="required" aria-required="true"></label><label class="control-label">请假类别：</label>
                        </th>
                        <td colspan="3">
                            <div class="input-icon right">
                                @Html.LeaveCategoryOptitions(nameof(Model.LeaveCategory), Model.LeaveCategory)
                            </div>
                        </td>
                    </tr>
                    <tr>
                        <th>
                            <label class="required" aria-required="true"></label><label class="control-label">请假时间：</label>
                        </th>
                        <td colspan="3">
                            <div class="input-icon right">
                                <div class="input-icon right form-inline">
                                    自
                                    <input class="datetime-control form-control w-180px" id="@nameof(Model.StartDatetime)" name="@nameof(Model.StartDatetime)" value="@DateTimeHelper.FormatDateHasMinute(Model.StartDatetime)" type="text" />至
                                    <input class="datetime-control form-control w-180px" id="@nameof(Model.EndDatetime)" name="@nameof(Model.EndDatetime)" value="@DateTimeHelper.FormatDateHasMinute(@Model.EndDatetime)" type="text" />&nbsp;&nbsp;&nbsp;&nbsp;共
                                    <input class="form-control w-80px" name="@nameof(Model.Days)" value="@Model.Days" type="text" />天
                                </div>
                            </div>
                        </td>
                    </tr>
                    <tr>
                        <th>
                            <label class="control-label">请假事由：</label>
                        </th>
                        <td colspan="3">
                            <div class="input-icon right">
                                <textarea class="form-control" name="@nameof(Model.Reason)" rows="3">@Model.Reason</textarea>
                            </div>
                        </td>
                    </tr>
                </table>
            </div>
            <div class="panel-footer text-center">
                <div class="buttons">
                    <a class="btn btn-outline btn-danger btnWorkFlowSend">
                        <i class="fa fa-arrow-right"></i> 提交
                    </a>
                    @*<button class="btn btn-primary" type="submit">
                        <i class="fa fa-save"></i> 保存
                    </button>
                    &nbsp;
                    <a class="btn btn-default btnClose" onclick="zeniths.util.closeFrameDialog(window);">
                        <i class="fa fa-sign-in"></i> 关闭
                    </a>*@
                </div>
            </div>
        </div>
    </form>
</div>

@section style{
    <link href="~/Plugin/bootstrap-datetimepicker/css/bootstrap-datetimepicker.min.css" rel="stylesheet" />
}

@section script{
    <script src="~/Plugin/bootstrap-daterangepicker/js/moment.min.js"></script>
    <script src="~/Plugin/bootstrap-daterangepicker/js/zh-cn.js"></script>
    <script src="~/Plugin/bootstrap-datetimepicker/js/bootstrap-datetimepicker.js"></script>
    <script>

        $(function () {
            $('.editform').dataform().initiCheck().initDateTimePicker().initWorkFlow({
                sendCallback: function (wf, result) {
                    //如果下一步骤的处理人是自己 则继续处理下一步骤
                    if (result.url) {
                        window.location.href = result.url;
                    } else {
                        //跳转到待办页面
                        zeniths.util.formAjaxSuccess(result);
                        @*window.location.href = '@Url.Action("PendingTasks","FlowTask",new { area ="WorkFlow"})';*@
                    }
                }
            }).initValidate({
                rules: {
                    EmployeeName: {
                        required: true
                    },
                    Deparment: {
                        required: true
                    },
                    LeaveCategory: {
                        required: true
                    },
                    StartDatetime: {
                        required: true
                    },
                    EndDatetime: {
                        required: true,
                        compareDate: "#StartDatetime"
                    },
                    Days: {
                        required: true                        
                    }
                },
                messages: {
                    EmployeeName: {
                        required: '员工姓名不能为空'
                    },
                    Deparment: {
                        required: '部门不能为空'
                    },
                    LeaveCategory: {
                        required: '请选择请假类别'
                    },
                    StartDatetime: {
                        required: '请选择请假开始时间'
                    },
                    EndDatetime: {
                        required: '请选择请假结束时间',
                        compareDate: '请假结束时间必须大于请假开始时间'
                    },
                    Days: {
                        required: '请填写请假天数'
                    }
                },
                beforeSubmit: function () {
                },
                autoAddRequired: false
            }).initAjax({ success: zeniths.util.formAjaxSuccess });

        });
    </script>
}