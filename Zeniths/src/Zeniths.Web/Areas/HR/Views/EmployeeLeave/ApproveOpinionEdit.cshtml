@model EmployeeLeave
@{
    var title = Html.GetCurrentStepName();
    Layout = "~/Views/Shared/_LayoutWorkflow.cshtml";
    var currentStep = Html.GetCurrentStep();
}

<div class="container-edit-zeniths">
    <form class="editform" action="@Html.GetFlowExecuteUrl()" method="POST" role="form">
        <div class="panel panel-default panel-zeniths">
            <div class="panel-heading">
                <span class="prefix"> <strong>@Model.Id</strong></span>
                @title
            </div>
            <div class="panel-body">
                @Html.AntiForgeryToken()
                <input type="hidden" name="@nameof(Model.Id)" value="@Model.Id" />
                <table class="table table-form table-dialog-form">

                    <tr>
                        <th>
                            <label class="control-label">姓名：</label>
                        </th>
                        <td>
                            <p class="form-control-static">@Model.EmployeeName</p>
                        </td>
                        <th>
                            <label class="control-label">部门：</label>
                        </th>
                        <td>
                            <p class="form-control-static">@Model.Deparment</p>
                        </td>
                    </tr>
                    <tr>
                        <th>
                            <label class="control-label">岗位：</label>
                        </th>
                        <td>
                            <p class="form-control-static">@Model.Post</p>
                        </td>
                        <th>
                            <label class="control-label">请假类别：</label>
                        </th>
                        <td>
                            <p class="form-control-static">@Model.LeaveCategory</p>
                        </td>
                    </tr>
                    <tr>
                        <th>
                            <label class="control-label">请假开始时间：</label>
                        </th>
                        <td>
                            <p class="form-control-static">@DateTimeHelper.FormatDateHasSecond(Model.StartDatetime)</p>
                        </td>
                        <th>
                            <label class="control-label">请假结束时间：</label>
                        </th>
                        <td>
                            <p class="form-control-static">@DateTimeHelper.FormatDateHasSecond(Model.EndDatetime)</p>
                        </td>
                    </tr>
                    <tr>
                        <th>
                            <label class="control-label">请假事由：</label>
                        </th>
                        <td colspan="3">
                            <p class="form-control-static">@Model.Reason</p>
                        </td>
                    </tr>
                    <tr>
                        <th>
                            <label class="control-label">请假天数：</label>
                        </th>
                        <td>
                            <p class="form-control-static">@Model.Days</p>
                        </td>
                        <th>
                            <label class="control-label">申请时间：</label>
                        </th>
                        <td>
                            <p class="form-control-static">@DateTimeHelper.FormatDateHasSecond(Model.ApplyDateTime)</p>
                        </td>
                    </tr>
                    <tr>
                        <th>
                            <label class="control-label">处理意见：</label>
                        </th>
                        <td colspan="3">
                            <textarea class="form-control" name="workflow_opinion" rows="3"></textarea>
                        </td>
                    </tr>
                </table>


            </div>
            <div class="panel-footer text-center">
                <div class="buttons">

                    @if (currentStep.Uid.Equals(WorkFlowHelper.GetLastStepId(Request.QueryString["flowId"])))
                    {
                        <a class="btn btn-outline btn-primary btnWorkFlowCompleted">
                            <i class="fa fa-check"></i> 完成
                        </a>
                    }
                    else
                    {
                        <a class="btn btn-outline btn-danger btnWorkFlowBack">
                            <i class="fa fa-arrow-left"></i> 驳回
                        </a>
                              
                        <a class="btn btn-outline btn-success btnWorkFlowSend">
                            审核通过
                            <i class="fa fa-arrow-right"></i>
                        </a>
                    }

                </div>
            </div>
        </div>
    </form>
</div>


@section script{
    <script>

        $(function () {
            //$('.editform').dataform().initSelect2().initiCheck().initDatePicker()
            $('.editform').dataform().initWorkFlow({
                sendCallback: function (wf, result) {
                    //如果下一步骤的处理人是自己 则继续处理下一步骤
                    if (result.url) {
                        window.location.href = result.url;
                    } else {
                        //跳转到待办页面
                        zeniths.util.formAjaxSuccess(result);
                        //window.location.href = '@Url.Action("PendingTasks","FlowTask",new { area ="WorkFlow"})';
                    }
                }
            }).initValidate({
                rules: {
                    EmployeeId: {
                        required: true
                    }
                },
                messages: {
                    EmployeeId: {
                        required: '请填写员工主键'
                    }
                },
                beforeSubmit: function () {
                }
            }).initAjax({ success: zeniths.util.formAjaxSuccess });

        });
    </script>
}