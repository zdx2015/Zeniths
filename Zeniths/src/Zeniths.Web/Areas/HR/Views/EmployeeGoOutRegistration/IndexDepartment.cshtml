@{
    var title = "管理外出登记";
}
<div class="container-zeniths">
    <div class="panel panel-default panel-zeniths">
        <div class="panel-heading">
            @title
        </div>
        <div class="panel-body">
            <div class="search-panel-zeniths">
                <form class="form-inline search-form">
                    <div class="form-group">
                        姓名：<input class="w-200px form-control" name="@nameof(EmployeeGoOutRegistration.EmployeeName)" type="text" placeholder="请输入员工姓名查询">&nbsp;&nbsp;
                        外出时间：<input class="date-control form-control" name="@nameof(EmployeeGoOutRegistration.GoOutDateTime)" type="text" />&nbsp;至
                        <input class="date-control form-control" name="GoOutEndDateTime" type="text" />
                    </div>
                    &nbsp;
                    <button class="btn btn-primary" type="submit">
                        <i class="fa fa-search"></i> 查询
                    </button>
                    <a class="btn btn-success" id="btnCreate" data-url="@Url.Action("Create")">
                        <i class="fa fa-plus"></i> 新建
                    </a>
                    @*<a class="btn btn-danger" id="btnDelete" data-url="@Url.Action("Delete")">
                        <i class="fa fa-trash-o"></i> 删除
                    </a>*@
                </form>
            </div>
            <div class="datagrid" data-url="@Html.Raw(Url.Action("GridDepartment"))" data-query-form=".search-form">
            </div>
        </div>
    </div>
</div>

@section script
{
    <script>
        $(function () {
            zeniths.util.standardGridBind({
                editWidth: 900,
                editHeight: 500,
                viewWidth: 900,
                viewHeight: 850
            });
        });
    </script>
}
