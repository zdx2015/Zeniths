@{
    var title = "外出登记审批";
}
<div class="container-zeniths">
    <div class="panel panel-default panel-zeniths">
        <div class="panel-heading">
            @title
        </div>
        <div class="panel-body">
            <div class="search-panel-zeniths">
                <form class="form-inline search-form">
                    <div class="form-group">
                        姓名：<input class="w-200px form-control" name="@nameof(EmployeeGoOutRegistration.EmployeeName)" type="text" placeholder="请输入员工姓名查询">&nbsp;&nbsp;
                        外出时间：<input class="date-control form-control" name="@nameof(EmployeeGoOutRegistration.GoOutDateTime)" type="text" />&nbsp;至
                        <input class="date-control form-control" name="GoOutEndDateTime" type="text" />
                    </div>
                    &nbsp;
                    <button class="btn btn-primary" type="submit">
                        <i class="fa fa-search"></i> 查询
                    </button>                   
                    <a class="btn btn-default" href="@Url.Action("Export")">
                        <i class="fa fa-share-square-o"></i> 导出
                    </a>
                </form>
            </div>
            <div class="datagrid" data-url="@Html.Raw(Url.Action("GridGeneralManagerOpinion"))" data-query-form=".search-form">
            </div>
        </div>
    </div>
</div>

@section script
{
    <script>
        $(function () {
            zeniths.util.standardGridBind({
                editWidth: 900,
                editHeight: 600,
                viewWidth: 900,
                viewHeight: 850
            });
        });
    </script>
}
