@model OAWorkLog
@{
    var title = "编辑工作日志";
}

<div class="container-edit-zeniths">
    <form class="editform" action="@Url.Action("Save")" method="POST" role="form">
        <div class="panel panel-default panel-zeniths">
            <div class="panel-heading">
                <span class="prefix"> <strong>@Model.Id</strong></span>
                @title
            </div>
            <div class="panel-body">
                @Html.AntiForgeryToken()
                <input type="hidden" name="@nameof(Model.Id)" value="@Model.Id" />
                <table class="table table-form table-dialog-form">
                
                    <tr>
                        <th >
                            <label class="control-label">本日工作总结：</label>
                        </th>
                        <td>
                            <div class="input-icon right">
                                <textarea class="editor-control form-control" name="@nameof(Model.WorkSummary)" rows="5">@Model.WorkSummary</textarea>
    
                            </div>
                        </td>
                    </tr>
                    <tr>
                        <th >
                            <label class="control-label">明日工作计划：</label>
                        </th>
                        <td>
                            <div class="input-icon right">
                                <textarea class="editor-control form-control" name="@nameof(Model.TomorrowPlan)" rows="5">@Model.TomorrowPlan</textarea>
                            </div>
                        </td>
                    </tr>
                    <tr>
                        <th >
                            <label class="control-label">其他说明：</label>
                        </th>
                        <td>
                            <div class="input-icon right">
                                <textarea class="editor-control form-control" name="@nameof(Model.OtheInstructions)" rows="5">@Model.OtheInstructions</textarea>
                            </div>
                        </td>
                    </tr>
                    <tr>
                        <th class="w-150px">
                            <label class="control-label">日志日期：</label>
                        </th>
                        <td> @if (Model.Id > 0)
                        {
                            <input type="hidden" name="@nameof(Model.LogDate)" value="@Model.LogDate" />
                            <span class="form-control-static" name="@nameof(Model.LogDate)">@DateTimeHelper.FormatDate(Model.LogDate)</span>
                        }
                        else
                        {
                            <input class="date-control form-control" name="@nameof(Model.LogDate)" value="@DateTimeHelper.FormatDate(Model.LogDate)" type="text" />
                        }
                            
                        </td>
                    </tr>
                                    
                </table>
            </div>
            <div class="panel-footer text-center">
                <div class="buttons">
                    <button class="btn btn-primary" type="submit">
                        <i class="fa fa-save"></i> 保存
                    </button>
                    &nbsp;
                    <a class="btn btn-default btnClose" onclick="zeniths.util.closeFrameDialog(window);">
                        <i class="fa fa-sign-in"></i> 关闭
                    </a>
                </div>
            </div>
        </div>
    </form>
</div>


@section script{
<script src="~/Plugin/kindeditor/kindeditor-min.js"></script>
    <script>

        $(function () {
            //$('.editform').dataform().initSelect2().initiCheck()
            $('.editform').dataform().initDatePicker().initKindEditor().initValidate({
                rules: {
                    LogDate: {
                        required: true
                        /*,maxlength: 100
                          ,digits: true
                        */
                    }, 
                    WorkSummary: {
                        required: true
                        /*,maxlength: 100
                          ,digits: true
                        */
                    }, 
                    TomorrowPlan: {
                        required: true
                        /*,maxlength: 100
                          ,digits: true
                        */
                    }, 
                    OtheInstructions: {
                        required: false
                        /*,maxlength: 100
                          ,digits: true
                        */
                    }
                },
                messages: {
                    LogDate: {
                        required: '请填写日志日期'
                        /*,maxlength: '长度不能超过100'
                          ,digits: '只能输入正整数'
                        */
                    }, 
                    WorkSummary: {
                        required: '请填写本日工作总结'
                        /*,maxlength: '长度不能超过100'
                          ,digits: '只能输入正整数'
                        */
                    }, 
                    TomorrowPlan: {
                        required: '请填写明日工作计划'
                        /*,maxlength: '长度不能超过100'
                          ,digits: '只能输入正整数'
                        */
                    }
                },
                beforeSubmit: function () {
                }
            }).initAjax({ success: zeniths.util.formAjaxSuccess });

        });
    </script>
}