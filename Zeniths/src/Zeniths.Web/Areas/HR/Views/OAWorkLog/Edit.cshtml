    <script>

        $(function () {
            //$('.editform').dataform().initSelect2().initiCheck().initDatePicker()
            $('.editform').dataform().initValidate({
                rules: {
                    LogDate: {
                        required: true
                        /*,maxlength: 100
                          ,digits: true
                        */
                    }, 
                    WorkSummary: {
                        required: true
                        /*,maxlength: 100
                          ,digits: true
                        */
                    }, 
                    TomorrowPlan: {
                        required: true
                        /*,maxlength: 100
                          ,digits: true
                        */
                    }, 
                    OtheInstructions: {
                        required: true
                        /*,maxlength: 100
                          ,digits: true
                        */
                    }, 
                    CreateUserId: {
                        required: true
                        /*,maxlength: 100
                          ,digits: true
                        */
                    }, 
                    CreateUserName: {
                        required: true
                        /*,maxlength: 100
                          ,digits: true
                        */
                    }, 
                    CreateDateTime: {
                        required: true
                        /*,maxlength: 100
                          ,digits: true
                        */
                    }, 
                    CreateDepartmentId: {
                        required: true
                        /*,maxlength: 100
                          ,digits: true
                        */
                    }, 
                    CreateDepartmentName: {
                        required: true
                        /*,maxlength: 100
                          ,digits: true
                        */
                    } 
                },
                messages: {
                    LogDate: {
                        required: '请填写日志日期'
                        /*,maxlength: '长度不能超过100'
                          ,digits: '只能输入正整数'
                        */
