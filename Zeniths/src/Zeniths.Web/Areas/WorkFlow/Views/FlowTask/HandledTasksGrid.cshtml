@model PageList<FlowTask>
@{
    Layout = null;
}
<table class="table table-zeniths table-striped table-bordered table-hover">
    <thead>
        <tr>
            <th class="w-200px">任务标题</th>
            <th class="w-100px" data-order="@nameof(FlowTask.FlowName)">流程名称</th>
            <th class="w-80px" data-order="@nameof(FlowTask.StepName)">步骤名称</th>
            <th class="w-80px" data-order="@nameof(FlowTask.SenderName)">发送人</th>
            <th class="w-80px text-center" data-order="@nameof(FlowTask.SenderDateTime)">发送时间</th>
            <th class="w-50px" data-order="@nameof(FlowTask.ReceiveName)">接收人</th>
            <th class="w-80px text-center" data-order="@nameof(FlowTask.ReadDateTime)">接收时间</th>
            <th class="w-80px text-center" data-order="@nameof(FlowTask.ActualFinishDateTime)">实际完成时间</th>
            <th class="w-50px" data-order="@nameof(FlowTask.Status)">状态</th>
            <th class="w-100px">备注</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var record in Model)
        {
            <tr>
                <td>@record.Title</td>
                <td>@record.FlowName</td>
                <td>@record.StepName</td>
                <td>@record.SenderName</td>
                <td class="text-center">@DateTimeHelper.FormatDateHasSecond(record.SenderDateTime)</td>
                <td>@record.ReceiveName</td>
                <td class="text-center">@DateTimeHelper.FormatDateHasSecond(record.ReadDateTime)</td>
                <td class="text-center">@DateTimeHelper.FormatDateHasSecond(record.ActualFinishDateTime)</td>
                <td>@WorkFlowHelper.GetTaskStatusName(record.Status)</td>
                <td>@record.Note</td>
            </tr>
        }
    </tbody>
</table>

@Html.RenderPages(Model)