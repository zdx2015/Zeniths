@model WorkFlowButton
@{
    var title = "编辑流程按钮";
}

<div class="container-edit-zeniths">
    <form class="editform" action="@Url.Action("Save")" method="POST" role="form">
        <div class="panel panel-default panel-zeniths">
            <div class="panel-heading">
                <span class="prefix"> <strong>@Model.WorkFlowButtonId</strong></span>
                @title
            </div>
            <div class="panel-body">
                @Html.AntiForgeryToken()
                <input type="hidden" name="@nameof(Model.WorkFlowButtonId)" value="@Model.WorkFlowButtonId" />
                <table class="table table-form table-dialog-form">
                    <tr>
                        <th class='w-100px'><label class="control-label">名称</label></th>
                        <td>
                            <div class="input-icon right">
                                <input class="form-control" name="@nameof(Model.WorkFlowButtonName)" value="@Model.WorkFlowButtonName" type="text" placeholder="请输入按钮名称" />
                            </div>
                        </td>
                    </tr>
                    <tr>
                        <th><label class="control-label">样式</label></th>
                        <td>
                            <div class='row'>
                                <div class='col-sm-6'>
                                    <input class="form-control" name="@nameof(Model.IconClass)" value="@Model.IconClass" type="text" />
                                </div>
                                <div class='col-sm-6'>
                                    <div class='input-group'>
                                        <span class='input-group-addon fix-border'>颜色</span>
                                        <input class="color-control form-control" name="@nameof(Model.IconColor)" 
                                               value="@Model.IconColor" type="text" title="请选择图标颜色" />
                                    </div>
                                </div>
                            </div>
                        </td>
                    </tr>
                    <tr>
                        <th><label class="control-label">脚本</label></th>
                        <td>
                            <div class="input-icon right">
                                <textarea class="form-control" name="@nameof(Model.Script)" rows="5">@Model.Script</textarea>
                            </div>
                        </td>
                    </tr>
                    <tr>
                        <th><label class="control-label">状态</label></th>
                        <td>
                            <input class="switch-control" name="@nameof(Model.IsEnabled)" value="1" @Html.IsChecked(Model.IsEnabled) type="checkbox" data-on-text="启用" data-off-text="禁用">
                        </td>
                    </tr>
                    <tr>
                        <th><label class="control-label">序号</label></th>
                        <td>
                            <div class="input-icon right">
                                <input class="form-control" name="@nameof(Model.SortIndex)" value="@Model.SortIndex" type="text" />
                            </div>
                        </td>
                    </tr>
                    <tr>
                        <th><label class="control-label">备注</label></th>
                        <td>
                            <textarea class="form-control" name="@nameof(Model.Note)" rows="3">@Model.Note</textarea>
                        </td>
                    </tr>
                </table>
            </div>
            <div class="panel-footer text-center">
                <div class="buttons">
                    <button class="btn btn-primary" type="submit">
                        <i class="fa fa-save"></i> 保存
                    </button>
                    &nbsp;
                    <a class="btn btn-default btnClose">
                        <i class="fa fa-sign-in"></i> 关闭
                    </a>
                </div>
            </div>
        </div>
    </form>
</div>


@section script{
    <script>

        //初始化表单
        function initForm() {
            $('.editform').dataform().initColorPicker().initSelect2().initSwitch().initValidate({
                rules: {
                    WorkFlowButtonName: {
                        required: true,
                        maxlength: 100
                    },
                    Script: {
                        required: true
                    },
                    SortIndex: {
                        required: true,
                        digits: true,
                        maxlength: 9
                    }
                },
                messages: {
                    WorkFlowButtonName: {
                        required: '请填写按钮名称',
                        maxlength: '按钮名称长度不能超过100'
                    },
                    Script: {
                        required: '请填写按钮脚本'
                    },
                    SortIndex: {
                        required: '请填写按钮排序号',
                        digits: '按钮排序号只能输入正整数',
                        maxlength: '按钮排序号不能超过9位数'
                    }
                },
                beforeSubmit: function () {

                }
            }).initAjax({
                success: function (result) {
                    if (!result.success) {
                        zeniths.util.alert(result.message);
                    } else {
                        zeniths.util.callDialogCallback(window);
                        zeniths.util.closeFrameDialog(window);
                    }
                }
            });
        }

        $(function () {

            initForm();//初始化表单

            //绑定关闭按钮事件
            $('.btnClose').on('click', function () {
                zeniths.util.closeFrameDialog(window);
            });

        });
    </script>
}